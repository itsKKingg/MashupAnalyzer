# Global security headers for WASM-powered workers
/*
  X-Content-Type-Options: nosniff
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin

# Ensure JavaScript bundles keep the correct MIME type and caching
/*.js
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

/*.mjs
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# Default WASM fallback (hashed assets in /assets)
/*.wasm
  Content-Type: application/wasm
  Cache-Control: public, max-age=31536000, immutable, no-transform
  Accept-Ranges: bytes
  X-Content-Type-Options: nosniff

# Essentia runtime kept in /public/essentia (also works for branch previews)
/essentia/*
  Content-Type: application/wasm
  Cache-Control: public, max-age=31536000, immutable, no-transform
  Accept-Ranges: bytes
  X-Content-Type-Options: nosniff
  Access-Control-Allow-Origin: *

# Worker bundles emitted by Vite (classic workers)
/assets/*worker*.js
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable
